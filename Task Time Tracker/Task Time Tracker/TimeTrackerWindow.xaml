<Window x:Class="Task_Time_Tracker.TimeTrackerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_Time_Tracker"
        mc:Ignorable="d"
        Title="TimeTrackerWindow" Height="300" Width="359.575">
    <Grid>
        <Label Content="Logged as" HorizontalAlignment="Left" Height="26" VerticalAlignment="Top" Width="65"/>
        <TextBox x:Name="CurrentUserBox" HorizontalAlignment="Left" Height="26" Margin="65,4,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="150"/>
        <ComboBox x:Name="TaskComboBox" HorizontalAlignment="Left" Height="29" Margin="70,116,0,0" VerticalAlignment="Top" Width="145"/>
        <ComboBox x:Name="ProjectComboBox" HorizontalAlignment="Left" Height="29" Margin="70,70,0,0" VerticalAlignment="Top" Width="145" SelectionChanged="ProjectComboBox_SelectionChanged"/>
        <Label Content="Project" HorizontalAlignment="Left" Height="29" Margin="12,70,0,0" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.957,0.507"/>
        <Label Content="Task" HorizontalAlignment="Left" Height="29" Margin="12,116,0,0" VerticalAlignment="Top" Width="50"/>

    </Grid>
</Window>
