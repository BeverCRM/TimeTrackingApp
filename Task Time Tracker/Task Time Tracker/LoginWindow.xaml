<Window x:Class="Task_Time_Tracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        ResizeMode="CanMinimize"
        mc:Ignorable="d"
        Icon="Resources\Main.ico"
        Title="Time Tracking App" Height="350" Width="430">
    <Grid Margin="0,0,2,0">
        <TextBox x:Name="LoginBox" HorizontalAlignment="Left" Height="23" Margin="155,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147" TabIndex="0"/>
        <Label Content="Login:" HorizontalAlignment="Left" Margin="103,111,0,0" VerticalAlignment="Top"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="170,244,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="82,158,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Height="23" Margin="155,161,0,0" VerticalAlignment="Top" Width="147" TabIndex="1" KeyDown="onPasswordBoxKeyDown"/>

    </Grid>
</Window>
